{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build myshell",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-o", "myshell",
                "*.cpp",
                "-I.",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build myshell using g++."
        }
    ],
    

}